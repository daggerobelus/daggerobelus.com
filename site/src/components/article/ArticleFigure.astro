---
import { LitWrapper } from '@semantic-ui/astro-lit';
import { ArticleFigure as ArticleFigureComponent } from './figure.js';

interface ImageItem {
  src: string;
  alt?: string;
}

interface Props {
  src?: string;
  alt?: string;
  images?: ImageItem[];
  layout?: '1x1' | '1x2' | '2x1' | '2x2' | 'auto';
  size?: 'small' | 'medium' | 'large' | 'full';
  caption?: string;
  source?: string;
  sourceUrl?: string;
}

const props = Astro.props;
---

<LitWrapper component={ArticleFigureComponent} {...props} />
