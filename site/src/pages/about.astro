---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Content, frontmatter } from '../content/about.md';
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <section class="max-w-content mx-auto px-6 md:px-10 py-16 md:py-24">
    <div class="max-w-2xl">
      <h1 class="text-4xl md:text-5xl font-serif leading-tight mb-8">{frontmatter.title}</h1>

      <div class="prose prose-lg text-ink/80 leading-relaxed space-y-6">
        <Content />
      </div>
    </div>
  </section>
</BaseLayout>
